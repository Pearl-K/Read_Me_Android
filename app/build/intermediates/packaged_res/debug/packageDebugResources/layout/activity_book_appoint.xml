                android:layout_margin="4dp"/>

            <TextView
                android:id="@+id/place_gyeongbuk"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:background="@drawable/place_background"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="8dp"
                android:text="경북"
                android:textSize="16sp"
                android:textColor="@color/Black"
                android:textStyle="bold"
                android:layout_margin="4dp"/>

            <TextView
                android:id="@+id/place_gyeongnam"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:background="@drawable/place_background"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="8dp"
                android:text="경남"
                android:textSize="16sp"
                android:textColor="@color/Black"
                android:textStyle="bold"
                android:layout_margin="4dp"/>

            <TextView
                android:id="@+id/place_jeju"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:background="@drawable/place_background"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="8dp"
                android:text="제주"
                android:textSize="16sp"
                android:textColor="@color/Black"
                android:textStyle="bold"
                android:layout_margin="4dp"/>
        </GridLayout>
    </LinearLayout>

    <!-- 세부 장소 섹션 -->
    <LinearLayout
        android:id="@+id/specific_place_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/meeting_place_section"
        android:layout_marginTop="8dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/place_cafemaru"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="카페마루"
            android:background="@drawable/place_background"
            android:padding="8dp"
            android:gravity="center"
            android:textColor="@color/Black"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/place_study_cafe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="새싹 스터디카페"
            android:background="@drawable/place_background"
            android:padding="8dp"
            android:gravity="center"
            android:textColor="@color/Black"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/place_study_room"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="394스터디룸"
            android:background="@drawable/place_background"
            android:padding="8dp"
            android:gravity="center"
            android:textColor="@color/Black"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- 확인 버튼 -->
    <Button
        android:id="@+id/confirm_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="24dp"
        android:background="@color/Primary"
        android:text="약속 설정하기"
        android:textColor="@color/White"
        android:textSize="18sp"
        android:textStyle="bold" />
</RelativeLayout>
