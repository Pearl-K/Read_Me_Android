<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 인터넷 사용 권한 설정 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Android 13(T) 이상에서 사용되는 권한 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES"/>


    <application
        android:name=".ui.GlobalApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Readme"
        tools:targetApi="31">

        <!-- MainActivity에 대한 선언 -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Readme">
        </activity>

        <!-- StartActivity에 대한 선언 -->
        <activity
            android:name=".StartActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Readme">
        </activity>

<!--        <activity-->
<!--            android:name=".ui.login.UsernameActivity"-->
<!--            android:exported="true"-->
<!--            android:label="@string/app_name"-->
<!--            android:theme="@style/Theme.Readme">-->
<!--        </activity>-->
        <activity
            android:name=".CategoryActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Readme">
        </activity>
        <activity
            android:name=".ui.userinfo.UserinfoActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Readme">
        </activity>

        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="8bd1ca39d5eb15687ae52deb301f1abe"/>

        <!-- LoginActivity를 런처로 설정 -->
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Readme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.community.TabLayoutActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Readme">
        </activity>

        <!-- Kakao 로그인 리디렉션 처리 -->
        <activity
            android:name="com.kakao.sdk.auth.AuthCodeHandlerActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Redirect URI: "kakao${NATIVE_APP_KEY}://oauth" -->
                <data android:host="oauth"
                    android:scheme="kakao8bd1ca39d5eb15687ae52deb301f1abe" /> <!-- 여기를 실제 네이티브 앱 키로 대체 -->
            </intent-filter>
        </activity>

    </application>

</manifest>
